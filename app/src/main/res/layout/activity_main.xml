<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#c600000"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="visible">



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/menu_marging_pading_10pd"
                android:layout_weight="1.0"
                android:gravity="right|bottom"
                android:orientation="vertical">





                <ImageView
                    android:id="@+id/img_job"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/purpal_round_strock"
                    android:padding="@dimen/menu_marging_pading_13pd"
                    android:scaleType="fitXY"
                    android:src="@mipmap/phone" />

                <TextView
                    android:layout_width="@dimen/menu_text_hieght_width"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Call me"
                    android:textColor="@color/fbutton_color_silver"
                    android:textSize="@dimen/titel_text"
                    android:textStyle="bold" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/menu_marging_pading_10pd"
                android:layout_weight="1.0"
                android:gravity="top|right"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_asset"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/green_round_strock"
                    android:padding="@dimen/menu_marging_pading_13pd"
                    android:scaleType="fitXY"
                    android:src="@mipmap/mobs" />

                <TextView
                    android:layout_width="@dimen/menu_text_hieght_width"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Mobile"
                    android:textColor="@color/fbutton_color_silver"
                    android:textSize="@dimen/titel_text"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:gravity="bottom|center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_task"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/lime_round_strock"
                    android:padding="@dimen/menu_marging_pading_13pd"
                    android:scaleType="fitXY"
                    android:src="@mipmap/tvxxl" />

                <TextView
                    android:layout_width="@dimen/menu_text_hieght_width"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="TV"
                    android:textColor="@color/fbutton_color_silver"
                    android:textSize="@dimen/titel_text"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/menu_marging_pading_20pd"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/yellow_round_strock"
                    android:padding="@dimen/menu_marging_pading_13pd"
                    android:scaleType="fitXY"
                    android:id="@+id/img_hrms"
                    android:src="@mipmap/chair" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:gravity="center|top"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_travel"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/lime_round_strock"
                    android:padding="@dimen/menu_marging_pading_13pd"
                    android:scaleType="fitXY"
                    android:src="@mipmap/tvxxl" />

                <TextView
                    android:layout_width="@dimen/menu_text_hieght_width"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="TV"
                    android:textColor="@color/fbutton_color_silver"
                    android:textSize="@dimen/titel_text"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center|center_vertical"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/menu_marging_pading_10pd"
                android:layout_weight="1.0"
                android:gravity="start|bottom"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_knowldge"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/blue_round_strock"
                    android:padding="@dimen/menu_marging_pading_13pd"
                    android:scaleType="fitXY"
                    android:src="@mipmap/mobs" />

                <TextView
                    android:layout_width="@dimen/menu_text_hieght_width"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Mobile"
                    android:textColor="@color/fbutton_color_silver"
                    android:textSize="@dimen/titel_text"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/menu_marging_pading_10pd"
                android:layout_weight="1.0"
                android:gravity="start|top"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/purpal_round_strock"
                    android:padding="@dimen/menu_marging_pading_13pd"
                    android:scaleType="fitXY"
                    android:src="@mipmap/cycler" />

                <TextView
                    android:layout_width="@dimen/menu_text_hieght_width"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Cycle need"
                    android:textColor="@color/fbutton_color_silver"
                    android:textSize="@dimen/titel_text"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>
